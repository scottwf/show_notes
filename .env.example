# ShowNotes Environment Configuration
# Copy this file to .env and configure for your environment

# Environment: 'development' or 'production'
ENVIRONMENT=development

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production

# Database Path (optional, defaults to instance/shownotes.sqlite3)
# SHOWNOTES_DB=/path/to/shownotes.sqlite3

# Service Integration - these pre-populate the onboarding form
SONARR_URL=http://your-server:8989
SONARR_API_KEY=
RADARR_URL=http://your-server:7878
RADARR_API_KEY=
TAUTULLI_URL=http://your-server:8181
TAUTULLI_API_KEY=
BAZARR_URL=http://your-server:6767
BAZARR_API_KEY=
JELLYSEER_URL=http://your-server:5055
JELLYSEER_API_KEY=

# Metadata Enrichment
THETVDB_API_KEY=

# AI/LLM Configuration (optional)
OLLAMA_URL=http://your-server:11434
# OLLAMA_MODEL=llama2
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4o

# Notifications (optional)
# PUSHOVER_USER_KEY=
# PUSHOVER_API_TOKEN=

# Plex OAuth (optional)
# PLEX_CLIENT_ID=shownotes-yourname
